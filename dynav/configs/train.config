[trainer]
batch_size = 100
learning_rate = 0.001
step_size = 150


[imitation_learning]
il_episodes = 3000
il_policy = orca
il_epochs = 50
# increase the safety space in ORCA demonstration for navigator
safety_space = 0.15


[train]
# number of batches to train at the end of training episode
train_batches = 10
# training episodes in outer loop
train_episodes = 10000
# number of episodes sampled in one training episode
sample_episodes = 1
target_update_interval = 50
evaluation_interval = 1000
# roughly the memory pool can store 2K episodes, total size = episodes * 50
capacity = 100000
epsilon_start = 0.5
epsilon_end = 0.1
epsilon_decay = 5000
checkpoint_interval = 1000
