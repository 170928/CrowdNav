[trainer]
batch_size = 100
learning_rate = 0.001
step_size = 150


[imitation_learning]
il_episodes = 3000
il_policy = orca
il_epochs = 100
# increase the safety space in ORCA demonstration for navigator
safety_space = 0.15


[train]
# number of epochs to train at the end of training episode
train_epochs = 30
# training episodes in outer loop
train_episodes = 200
# number of episodes sampled in one training episode
sample_episodes = 20
test_interval = 40
# roughly the memory pool can store 20K episodes
capacity = 800000
epsilon_start = 0.5
epsilon_end = 0.1
epsilon_decay = 150
checkpoint_interval = 50
