[env]
time_limit = 25
# specify the global time step of the simulation, the inverse of FPS
time_step = 0.25
val_size = 100
test_size = 500
randomize_attributes = false


[reward]
success_reward = 1
collision_penalty = -0.25
discomfort_dist = 0.2
discomfort_penalty_factor = 0.5


[sim]
train_val_sim = circle_crossing
test_sim = circle_crossing
square_width = 10
circle_radius = 4
ped_num = 5


[peds]
visible = true
policy = orca
radius = 0.3
v_pref = 1
sensor = coordinates


[navigator]
visible = false
# the policy of navigator is set outside, not set inside the environment
policy = none
radius = 0.3
v_pref = 1
sensor = coordinates
