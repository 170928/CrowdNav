# policy configurations for navigator

[rl]
gamma = 0.9


[action_space]
kinematics = holonomic
# action space size is speed_samples * rotation_samples + 1
speed_samples = 5
rotation_samples = 16
sampling = exponential


[cadrl]
mlp_dims = 150, 100, 100
multiagent_training = false


[lstm_rl]
mlp_dims = 256, 256
lstm_hidden_dim = 20
multiagent_training = true


[srl]
mlp1_dims = 150, 100, 100
mlp2_dims = 100
multiagent_training = true


[sarl]
mlp1_dims = 150, 100, 100
mlp2_dims = 100
multiagent_training = true


[om_sarl]
grid_num = 4
grid_size = 0.5
mlp1_dims = 150, 100, 100
mlp2_dims = 100
multiagent_training = true