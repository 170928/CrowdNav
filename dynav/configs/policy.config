# policy configurations for navigator

[rl]
gamma = 0.9


[om]
cell_num = 4
cell_size = 1
directional = false


[action_space]
kinematics = holonomic
# action space size is speed_samples * rotation_samples + 1
speed_samples = 5
rotation_samples = 16
sampling = exponential


[cadrl]
mlp_dims = 150, 100, 100
multiagent_training = false


[lstm_rl]
global_state_dim = 50
mlp_dims = 150, 100, 100
multiagent_training = true
with_om = false


[srl]
global_state_dim = 50
mlp1_dims = 100, 100
mlp2_dims = 150, 100, 100
multiagent_training = true
with_om = false


[sarl]
global_state_dim = 50
mlp1_dims = 100, 100
mlp2_dims = 150, 100, 100
attention_dims = 100, 100
multiagent_training = true
with_om = false